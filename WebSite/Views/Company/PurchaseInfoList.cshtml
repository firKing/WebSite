
@{
    ViewBag.Title = "PurchaseInfoList";
    Layout = "~/Views/Layouts/Home.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/CompanyHome/CompanyHome.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Company/Company.js")
}

@section title{
    发布的采购信息
}


<div id="list-main">
    <h2>
        单位
        <!-- <a class="back" href="#">退出登录</a> -->
    </h2>

    <div class="content">
        <div class="col-md-4">
            <ul class="nav nav-pills nav-stacked">
                <li> <div class="line"></div><a href="@Url.Action("Home", "Company")">单位信息</a></li>
                <li><div class=""></div><a href="@Url.Action("PurchaseInfoList", "Company")?page=1">发布的采购信息</a></li>
                <li>
                    <div></div><a href="@Url.Action("NewsList", "Company")?page=1">发布的新闻</a>
                </li>
            </ul>
        </div>
        <div class="col-md-8">
            <form class="info" action="" method="post">
                <div class="title">
                    <h2>单位信息</h2>
                    <div class="change"><a href="@Url.Action("Edit", "Register")?user_id=@ViewBag.home.companyId&user_type=@ViewBag.home.user.user_type">修改</a></div>
                </div>
                <div class="details">
                    <div class="show">
                        <h3>基本信息</h3>
                        <ul>
                            <li>企业名称: @ViewBag.home.user.user_name</li>
                            <li>电话： @ViewBag.home.user.user_telephone</li>
                            <li>邮箱: @ViewBag.home.user.user_mail</li>
                            <li>联系地址: @ViewBag.home.user.user_address.</li>
                            <li>概要： @ViewBag.home.user.user_introduction </li>
                        </ul>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

