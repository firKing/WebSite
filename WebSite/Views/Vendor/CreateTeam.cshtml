@model WebSite.Models.team

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Layouts/Personal.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/CreatTeam/CreatTeam.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/CreatTeam/CreatTeam.js")
}

@section title {
    组建虚拟团队
}
<div id="detail-main">
    <h2>组建虚拟团队</h2>
    <div id="CreateTeam">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                @Html.LabelFor(model => model.team_name, "队名", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.team_name, new { @class = "form-control", @placeholder = "队名" })
                    @Html.ValidationMessageFor(model => model.team_name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.members, "成员姓名", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.members, new { @class = "form-control", @placeholder = "成员姓名", @data-container="body", @data-toggle="popover", @data-placement = "right", @data-trigger = "focus", @data-content = "成员之间用逗号隔开" })
                    @Html.ValidationMessageFor(model => model.members)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.purchase, "采购对象", new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.purchase, new { @class = "form-control", @placeholder = "采购对象" })
                    @Html.ValidationMessageFor(model => model.purchase)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.team_introduction, "概要", new { @class = "col-sm-3 control-label" })
                <label for="outline" class="col-sm-3 control-label">概要</label>
                <div class="col-sm-9">
                    @Html.TextAreaFor(model => model.team_introduction, new { @class = "form-control", @row="5" })
                    @Html.ValidationMessageFor(model => model.team_introduction)
                </div>
            </div>
            <div class="form-group form-submit">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-success">保存并提交</button>
                </div>
            </div>
        </form>
    </div>
</div>

