
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Layouts/Home.cshtml";
}
@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/VendorHome/VendorHome.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Vendor/Cpmpany.js")
}

@section title{
    个人中心
}


<div id="list-main">
    <h2>
        供应商
    </h2>

    <div class="content">
        <div class="col-md-4">
            <ul class="nav nav-pills nav-stacked">
                <li> <div class="line"></div><a href="@Url.Action("Home", "Vendor")">个人中心</a></li>
                <li><div class=""></div><a href="@Url.Action("AddTeamList", "Vendor")?page=1">我加入的队伍</a></li>
                <li>
                    <div></div><a href="@Url.Action("PublishBidList", "Vendor")?page=1">我的投标</a>
                </li>
            </ul>
        </div>
        <div class="col-md-8">
            <div class="info">
                <div class="title">
                    <h2>供应商信息</h2>
                    <div class="change">
                        <a href="@Url.Action("Edit", "Register")?user_id=@ViewBag.home.vendorId&user_type=@ViewBag.home.user.user_type">修改</a>
                    </div>
                </div>
                <div class="details">
                    <div class="show">
                        <h3>基本信息</h3>
                        <ul>
                            <li>企业名称: @ViewBag.home.user.user_name</li>
                            <li>电话： @ViewBag.home.user.user_telephone</li>
                            <li>邮箱: @ViewBag.home.user.user_mail</li> 
                            <li>联系地址: @ViewBag.home.user.user_address</li>
                            <li>概要： @ViewBag.home.user.user_introduction </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>