
@{
    ViewBag.Title = "PublishBidList";
    Layout = "~/Views/Layouts/List.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/VendorHome/VendorHome.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Vendor/Cpmpany.js")
}

@section title{
    我的投标
}


<div id="list-main">
    <h2>
        供应商
    </h2>

    <div class="content">
        <div class="col-md-4">
            <ul class="nav nav-pills nav-stacked">
                <li><div class=""></div><a href="@Url.Action("Home", "Vendor")">个人中心</a></li>
                <li><div class=""></div><a href="@Url.Action("AddTeamList", "Vendor")?page=1">我加入的队伍</a></li>
                <li>
                    <div class="line"></div><a href="@Url.Action("PublishBidList", "Vendor")?page=1">我的投标</a>
                </li>
            </ul>
        </div>
        <div class="col-md-8">
            <div class="info">
                <div class="title">
                    <h2>我的投标</h2>
                </div>
                <div class="details">
                    @foreach (var key in ViewBag.personal)
                    {
                        <div class="show">
                            <h3>对 <a href="@Url.Action("Detail", "Purchase")?id=@key.first.purchaseId">@key.first.purchase.purchase_title</a> 的竞标
                                    @if (key.second.staute == 0)
                                    {
                                        <span style="color: #006400">审核中</span>
                                    }else if (key.second.staute == 1)
                                    {
                                        <span style="color: #ff3333;">恭喜中标</span>
                                    }else if (key.second.staute == 2)
                                    {
                                        <span style="color: #696969">未选中</span>
                                    }
                            </h3>
                            <ul>
                                <li>设备名称: @key.first.bid_device_name</li>
                                <li>数量： @key.first.bid_number</li>
                                <li>概要: @key.first.bid_introduction</li>
                            </ul>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
