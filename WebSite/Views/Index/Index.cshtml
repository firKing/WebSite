@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Index.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/Index/index.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Index/index.js")
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class=""></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item">
            <img src="../Image/slideImg.png" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Redrock采购网</h1>
                    <p>财政部唯一指定政府采购信息网络发布媒体 国家级政府采购专业网站</p>
                    <p><a class="btn btn-lg btn-success" href="~/Index/NewsList?page=1" role="button">查看详情</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="../Image/slideshow_1.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>推动经济发展迈上新台阶</h1>
                    <p>当前，中国经济发展所处的新常态，既是由过去时发展而来的现在时，更是蕴含着巨大变革、创新活力，迈向历史发展新阶段的未来时。认识新常态很重要，适应新常态也很重要；但更重要的是引领新常态，推动中国经济发展迈上新台阶。</p>
                    <p><a class="btn btn-lg btn-success" href="~/Index/NewsList?page=1" role="button">查看详情</a></p>
                </div>
            </div>
        </div>
        <div class="item active">
            <img src="../Image/slideshow_2.jpg" alt="Third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Redrock采购网</h1>
                    <p>最美丽的采购网，帮助你找到你想要的。机不可失时不再来，赶快加入我们吧！</p>
                    <p><a class="btn btn-lg btn-success" href="~/Index/NewsList?page=1" role="button">查看详情</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div id="main">
    <div class="row">
        <div class="col-md-8">
            <h1>新闻动态 <span></span></h1>
            <ul>
                @if (ViewBag.newes != null)
                    {
                        foreach (var item in ViewBag.newes)
                        { 
                                <li>
                                    <a href="~/New/Detail?id=@item.detailId">
                                        <h2><span>@item.time.first</span><b>@item.time.second</b></h2>
                                        <p>@item.name</p>
                                    </a>
                                </li>
                        }
                    }
            </ul>
            @Html.ActionLink("更多>>", "NewsList", "Index", new { page = 1 }, new { })
        </div>
        <div class="col-md-4">
            <h3>专家推荐</h3>
            @{
                if (ViewBag.experts != null)
                {
                    foreach (var item in ViewBag.experts)
                    {
                    <img src="../Image/img1.png" alt="img1" />
                    <div class="col-text">
                        <h5>@item.name</h5>
                        <p>@item.content</p>
                     </div>
                        }
                    }
                }
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h1>采购信息 <span></span></h1>
            <ul>
                @if (ViewBag.purchases != null)
                    {
                        foreach (var item in ViewBag.purchases)
                        {
                            <li>
                                <a href="~/Purchase/Detail?id=@item.detailId">
                                    <h2><span>@item.time.first</span><b>@item.time.second</b></h2>
                                    <p>@item.name</p>
                                </a>
                            </li>
                        }

                    }
            </ul>
            @Html.ActionLink("更多>>", "PurchaseList", "Index", new { page = 1 }, new { })
        </div>
        <div class="col-md-4">
            <h3>正在组建的团队</h3>
            <ul class="teams">

                @{
                    if (ViewBag.teams != null)
                    {
                        foreach (var item in ViewBag.teams)
                        {
                            <li>
                                <a href="~/Team/Detail?id=@item.id">@item.name</a>
                            </li>
                        }
                    }

                }
            </ul>
            @Html.ActionLink("更多>>", "TeamList", "Index", new { page = 1 }, new { })
        </div>
    </div>
</div>