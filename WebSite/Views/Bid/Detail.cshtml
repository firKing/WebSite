
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layouts/Details.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/BidDetails/bidDetail.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/kindeditor.js")
    @Scripts.Render("~/Scripts/zh_CN.js")
}

@section title{
    标书详情
}

<!--详情页主体部分-->
<div id="detail-main">
    <h2>@ViewBag.details.bid_title</h2>
    <p class="detail-info"><span>@ViewBag.details.bid_time</span><span>创建供应商:@ViewBag.details.bidder</span></p>
    <div class="detail-text">
        <p>
           @ViewBag.details.bid_content
        </p>
        <a href="purchase.html" class="btn btn-success btn-lg pull-right" role="button">采用</a>
    </div>
    <form id="new_form" method="post">
        <label for="commit" class="col-sm-2 control-label">评论：</label>
        <textarea id="editor_id" style="width: 100%; height: 250px;"></textarea>
        <input type="hidden" id="news_content" name="bid_content">
    </form>
    <div class="commit_list">
        <h4>专家评论</h4>
        <ul class="commit_detail">
          

            @foreach (var item in ViewBag.details.second)
            {
                <li>
                    <h5>@item.user.user_name<span class="pull-right">@item.audit.audit_time</span></h5>
                    <p>@item.audit.audit_content</p>
                </li>
            }

        </ul>
    </div>
</div>
<script>
    KindEditor.ready(function (K) {
        window.editor = K.create('#editor_id');
    });

    $("#new_form").on('submit', function () {
        editor.sync();
        var html = $("#editor_id").val();
        $("#news_content").val(html);

        if (!(/\w+/.test(html)) && !(/\w+/.test($("#news_title").val()))) {
            return false;
        }
    });
</script>

