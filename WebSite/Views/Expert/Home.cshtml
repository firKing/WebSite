
@{
    ViewBag.Title = "ExpertHome";
    Layout = "~/Views/Layouts/Personal.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/Company/Company.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Company/Cpmpany.js")
}
<div id="list-main">
    <h2>
        专家个人中心
        <!-- <a class="back" href="#">退出登录</a> -->
    </h2>

    <div class="content">
        <div class="col-md-4">
            <ul class="nav nav-pills nav-stacked">
                <li><div class="line"></div>个人中心</li>
                <li><div class=""></div></li>
            </ul>
        </div>
        <div class="col-md-8">
            <form class="info" action="" method="post">
                <div class="title">
                    <h2>专家信息</h2>
                    <div class="change">@Html.ActionLink("修改", "change_expert", "Register", new { company_id = ViewBag.home.expert_id })</div>
                </div>
                <div class="details">
                    <div class="show">
                        <h3>基本信息</h3>
                        <ul>
                            <li>姓名: @ViewBag.home.expert_name</li>
                            <li>电话： @ViewBag.home.expert_telephone</li>
                            <li>邮箱: @ViewBag.home.expert_mail</li>
                            <li>联系地址: @ViewBag.home.expert_address</li>
                            <li>简介： @ViewBag.home.expert_introduce</li>
                        </ul>
                    </div>
                </div>
            </form>

            <form class="info" action="" method="post">
                <div class="title">
                    <h2>企业邀请</h2>
                 </div>
                <div class="details">
                    @foreach (var key in ViewBag.list)
                    {
                        <div class="section">
                            <div class="submit">
                                <a href="#">接受</a>
                                <a href="#">拒绝</a>
                            </div>
                            <h3>key.purchase.purchase_title 采购</h3>
                            <p>key.invitation_content</p>
                        </div>
                    }
                   
                </div>
            </form>
        </div>
    </div>
</div>