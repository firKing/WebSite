
@{
    ViewBag.Title = "detail";
    Layout = "~/Views/Layouts/Details.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/Index/index.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Index/index.js")
}

<!--新闻和虚拟团队详情页主体部分-->
<div id="detail-main">
    @{
        <h2>ViewBag.title</h2>
    }
    
    <p class="detail-info">
        @{
            <span>ViewBag.news.news_time</span>
            <span>创建供应商:ViewBag.news.company</span>
        }
    </p>
    <div class="detail-text">
        @{ 
            <p>ViewBag.news.news_content</p>
        }
        <p></p>
    </div>
    @if (ViewBag.parent == "team")
        {
            <a href="#" class="btn btn-success btn-lg pull-right" role="button">申请加入</a>
        }
</div>
<!--新闻和虚拟团队详情页主体部分-->

