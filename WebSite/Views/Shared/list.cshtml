
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/List.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/Index/index.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Index/index.js")
}

<!--详情页主体部分-->
<div id="list-main">
    <h2>
        新闻列表
        <form class="navbar-form navbar-right" role="search">
            <input type="text" class="form-control" placeholder="搜索题库内容">
            <input type="submit" value=" " name="search" />
        </form>
    </h2>
    <ul>
        @{
            foreach (var item in ViewBag.list)
            {
                <li>
                    <a href="#">
                        <h4>item.news_title</h4>
                        <p>
                            item.news_content
                        </p>
                        <span>item.news_time</span>
                    </a>
                </li>
            }
        }
    </ul>
    <nav>
        <ul class="pagination">
            <li class="disabled"><a href="#"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
        </ul>
    </nav>
</div>
<!--详情页主体部分-->

