@model WebSite.Models.user

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Layouts/Index.cshtml";
}

@section css {
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Index/common.css")
    @Styles.Render("~/Content/Index/index.css")
    @Styles.Render("~/Content/User/user.css")
}

@section script {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Index/index.js")
}

@section title
{
    删除用户
}

<div class="container">
    <h2> 删除用户 </h2>
    <h3>确定删除这个用户？</h3>
    <table class="table table-hover table-bordered">
        <tr class="dl-horizontal">
            <td>
                用户类型
            </td>

            <td>
                @Html.DisplayFor(model => model.user_type)
            </td>
        </tr>
        <tr>
            <td>
                用户名
            </td>

            <td>
                @Html.DisplayFor(model => model.user_name)
            </td>
        </tr>
        <tr>
            <td>
               用户密码
            </td>

            <td>
                @Html.DisplayFor(model => model.user_password)
            </td>

        </tr>
        <tr>
            <td>
               手机号码
            </td>

            <td>
                @Html.DisplayFor(model => model.user_telephone)
            </td>
        </tr>
        <tr>
            <td>
              用户邮箱
            </td>

            <td>
                @Html.DisplayFor(model => model.user_mail)
            </td>
        </tr>
       
        <tr>
            <td>
                用户地址
            </td>

            <td>
                @Html.DisplayFor(model => model.user_address)
            </td>
        </tr>
        <tr>
            <td>
               用户简介
            </td>

            <td>
                @Html.DisplayFor(model => model.user_introduction)
            </td>
        </tr>
     

    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
